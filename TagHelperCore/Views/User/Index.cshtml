@model UserViewModel

<form asp-action="Index" asp-controller="User" method="post">
    <fieldset>
        <legend><strong>User Information</strong></legend>

        <validation-summary-list-iems validation-order="@Model.ValidationOrder"></validation-summary-list-iems>

        <div class="row">
            <div class="col-md-4">
                <div class="form-group">
                    <label asp-for="FirstName"></label><br />
                    <span asp-validation-for="FirstName"></span>
                    <input asp-for="FirstName" class="form-control" />
                </div>

                <div class="form-group">
                    <label asp-for="LastName"></label><br />
                    <span asp-validation-for="LastName"></span>
                    <input asp-for="LastName" class="form-control" />
                </div>

                <div class="form-group">
                    <label asp-for="Telephone"></label><br />
                    <span asp-validation-for="Telephone"></span>
                    <input asp-for="Telephone" class="form-control" />
                </div>

                <div class="form-group">
                    <label asp-for="City"></label><br />
                    <span asp-validation-for="City"></span>
                    <input asp-for="City" class="form-control" />
                </div>

                <div>
                    <button type="submit" value="Submit" class="btn btn-primary">Submit</button>
                </div>
            </div>
        </div>       

    </fieldset>
</form>